<div data-sort="{sort}">
  <div class="form-group">
    <label>Topic Sorting</label>
    <select class="form-control" name="sort">
      <option value="reverse">Reverse Chronological</option>
      <option value="chronological">Chronological</option>
      <option value="votes">Votes</option>
      <option value="custom">Custom Selection</option>
    </select>
  </div>

  <div class="form-group sort-custom">
    <button type="button" class="btn btn-primary fte-topics-sort">Select Topics</button>
  </div>

  <input type="hidden" name="sorted" />
</div>
